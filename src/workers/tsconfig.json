{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../*"]
    },
    "types": ["@cloudflare/workers-types"]
  },
  "include": ["shim.d.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
